<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalTrainer.Pages.HomePage"
             Title="{Binding Title}">

  <StackLayout VerticalOptions="StartAndExpand" Padding="20">

    <Image WidthRequest="200" Source="logo.png"/>
    <Label x:Name="title" HorizontalOptions="Center" />
    
    <Button x:Name="UserInfoBtn"  Command="{Binding UserEditInfoCommand}"/>
    <Button x:Name="BmiBtn"  Command="{Binding BmiCommand}"/>
    <Button x:Name="AddtraningBtn"  Command="{Binding AddTrainingCommand}"/>
    <Button x:Name="TrainingCalendarBtn"  Command="{Binding TrainingCalendarCommand}"/>

    
  </StackLayout>
  
</ContentPage>