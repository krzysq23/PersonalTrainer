<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalTrainer.Pages.UserEditInfoPage"
             Title="{Binding Title}">

  <StackLayout Padding="10" VerticalOptions="StartAndExpand" BindingContext="{Binding UserInfo}">

    <Label x:Name="userNameLbl" />
    <Entry x:Name="userNameEntry" Text="{Binding UserName}" />

    <Label x:Name="genderLbl"/>
    <Picker x:Name="genderPicker" SelectedIndex="{Binding SelectedIndexEnum}" HorizontalOptions="FillAndExpand">
      <Picker.Items>
        <x:String x:Name="malePicker"/>
        <x:String x:Name="famalePicker"/>
      </Picker.Items>
    </Picker>

    <Label x:Name="ageLbl" />
    <Entry x:Name="ageEntry" Keyboard="Numeric" Text="{Binding Age}" />

    <Label x:Name="weightLbl" />
    <Entry x:Name="weightEntry" Keyboard="Numeric" Text="{Binding Weight}" />

    <Label x:Name="heightLbl" />
    <Entry x:Name="heightEntry" Keyboard="Numeric" Text="{Binding Height}" />

    <Button x:Name="save" Clicked="SaveClicked"/>

  </StackLayout>
  
</ContentPage>